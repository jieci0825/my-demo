{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "vue": ["./play/node_modules/vue"],
            "@my/my-comp": ["./packages/my-comp/index.ts"],
            "@my/components": ["./packages/components/index.ts"],
            "@my/utils": ["./packages/utils/index.ts"],
            "@my/utils/*": ["./packages/utils/*"],
            "@my/theme-chalk/*": ["./packages/theme-chalk/*"]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.vue",
        "play/src/**/*.ts",
        "play/src/**/*.vue",
        "play/vite.config.ts"
    ]
}
